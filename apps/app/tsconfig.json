{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"plugins": [{ "name": "next" }],
		"allowImportingTsExtensions": true
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.mjs",
		"./**/*.cjs",
		"../../@types/**/*.ts"
	],
	"exclude": ["**/node_modules/**"]
}
